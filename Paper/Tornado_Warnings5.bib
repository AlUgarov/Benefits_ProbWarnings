	file = {Full Text PDF:C\:\\Users\\Alex\\Zotero\\storage\\H2TJ36J8\\Morss et al. - 2008 - Communicating Uncertainty in Weather Forecasts A .pdf:application/pdf;Snapshot:C\:\\Users\\Alex\\Zotero\\storage\\EC9NSYPF\\2008waf2007088_1.html:text/html},
