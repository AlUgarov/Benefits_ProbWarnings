	file = {Full Text PDF:C\:\\Users\\Alex\\Zotero\\storage\\VMJV3VHM\\LeClerc and Joslyn - 2015 - The Cry Wolf Effect and Weather-Related Decision M.pdf:application/pdf;Snapshot:C\:\\Users\\Alex\\Zotero\\storage\\HW6K4SJ2\\risa.html:text/html},
